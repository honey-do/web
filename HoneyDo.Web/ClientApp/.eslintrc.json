{
  "parser": "babel-eslint",
  "env": {
      "browser": true,
      "es6": true,
      "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
      "ecmaFeatures": {
          "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
  },
  "plugins": [
      "react",
      "prettier",
      "import",
      "jsx-a11y"
  ],
  "rules": {
    "prettier/prettier": "warn",
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": "error"
  },
  "globals": {
    "test": true,
    "expect": true,
    "describe": true,
    "Promise": true
  }
}